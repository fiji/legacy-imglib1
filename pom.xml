<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
		http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.scijava</groupId>
		<artifactId>pom-scijava</artifactId>
		<version>1.139</version>
		<relativePath />
	</parent>

	<groupId>sc.fiji</groupId>
	<artifactId>legacy-imglib1</artifactId>
	<version>2.0.0-SNAPSHOT</version>

	<name>Legacy ImgLib1</name>
	<description>This project serves purely for phasing out ImgLib1 in favor of ImgLib2.</description>

	<properties>
		<bio-formats.groupId>ome</bio-formats.groupId>
		<bio-formats.version>5.0.0</bio-formats.version>

		<edu.mines.version>20100113</edu.mines.version>
		<java3d.version>1.5.2</java3d.version>
		<jcommon.version>1.0.17</jcommon.version>
		<jfreechart.version>1.0.14</jfreechart.version>
		<mpicbg.version>20120621</mpicbg.version>

		<!-- Prevent the plugin from being copied to ./plugins/ by default -->
		<imagej.app.directory>path/to/Fiji.app/</imagej.app.directory>
	</properties>

	<dependencies>
		<dependency>
			<groupId>net.imagej</groupId>
			<artifactId>ij</artifactId>
			<version>${imagej1.version}</version>
		</dependency>
		<dependency>
			<groupId>mpicbg</groupId>
			<artifactId>mpicbg</artifactId>
			<version>${mpicbg.version}</version>
		</dependency>
		<dependency>
			<groupId>${bio-formats.groupId}</groupId>
			<artifactId>formats-api</artifactId>
			<version>${bio-formats.version}</version>
			<!-- NB: Bio-Formats 5.0.0 erroneously depends on the obsolete
			         gov.nih.imagej:imagej artifact, which causes a name
			         clash with net.imagej:ij. So we exclude it.
			         Additionally, a couple of Bio-Formats' dependencies
			         lack the test-scope. -->
			<exclusions>
				<exclusion>
					<groupId>gov.nih.imagej</groupId>
					<artifactId>imagej</artifactId>
				</exclusion>
				<exclusion>
					<groupId>junit</groupId>
					<artifactId>junit</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.testng</groupId>
					<artifactId>testng</artifactId>
				</exclusion>
				<exclusion>
					<groupId>xerces</groupId>
					<artifactId>xercesImpl</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>${bio-formats.groupId}</groupId>
			<artifactId>formats-bsd</artifactId>
			<version>${bio-formats.version}</version>
			<!-- NB: Bio-Formats 5.0.0 erroneously depends on the obsolete
			         gov.nih.imagej:imagej artifact, which causes a name
			         clash with net.imagej:ij. So we exclude it.
			         Additionally, a couple of Bio-Formats' dependencies
			         lack the test-scope. -->
			<exclusions>
				<exclusion>
					<groupId>gov.nih.imagej</groupId>
					<artifactId>imagej</artifactId>
				</exclusion>
				<exclusion>
					<groupId>junit</groupId>
					<artifactId>junit</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.testng</groupId>
					<artifactId>testng</artifactId>
				</exclusion>
				<exclusion>
					<groupId>xerces</groupId>
					<artifactId>xercesImpl</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>edu.mines</groupId>
			<artifactId>mines-jtk</artifactId>
			<version>${edu.mines.version}</version>
		</dependency>
		<dependency>
			<groupId>org.jfree</groupId>
			<artifactId>jcommon</artifactId>
			<version>${jcommon.version}</version>
		</dependency>
		<dependency>
			<groupId>org.jfree</groupId>
			<artifactId>jfreechart</artifactId>
			<version>${jfreechart.version}</version>
		</dependency>
		<dependency>
			<groupId>java3d</groupId>
			<artifactId>vecmath</artifactId>
			<version>${java3d.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>net.imglib2</groupId>
			<artifactId>imglib2-algorithms</artifactId>
			<version>${imglib2.version}</version>
		</dependency>
		<dependency>
			<groupId>net.imglib2</groupId>
			<artifactId>imglib2-ij</artifactId>
			<version>${imglib2.version}</version>
		</dependency>
		<dependency>
			<groupId>net.imglib2</groupId>
			<artifactId>imglib2</artifactId>
			<version>${imglib2.version}</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<repositories>
		<!-- NB: for project parent, in case of partial checkout -->
		<repository>
			<id>imagej.public</id>
			<url>http://maven.imagej.net/content/groups/public</url>
		</repository>
	</repositories>

	<scm>
		<connection>scm:git:git://github.com/fiji/legacy-imglib1</connection>
		<developerConnection>scm:git:git@github.com:fiji/legacy-imglib1</developerConnection>
		<tag>HEAD</tag>
		<url>https://github.com/fiji/legacy-imglib1</url>
	</scm>

</project>
